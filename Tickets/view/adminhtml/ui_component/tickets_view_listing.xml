<?xml version="1.0" encoding="UTF-8"?>

<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">sample06_news_listing.sample06_news_listing_data_source</item>
        </item>
    </argument>

    <settings>
        <spinner>tickets_view_columns</spinner>
        <deps>
            <dep>tickets_view_listing.tickets_view_listing_data_source</dep>
        </deps>
    </settings>

    <dataSource name="tickets_view_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">ticket_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>Favicode_Tickets::tickets</aclResource>
        <dataProvider class="Favicode\Tickets\Ui\Component\Listing\DataProvider"
                      name="tickets_view_listing_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>ticket_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>

    <listingToolbar name="listing_top">
        <settings>
            <sticky>false</sticky>
        </settings>

        <!--
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        -->

        <paging name="listing_paging"/>

    </listingToolbar>

    <columns name="tickets_view_columns">
        <selectionsColumn name="ids">
            <settings>
                <indexField>ticket_id</indexField>
            </settings>
        </selectionsColumn>
        <column name="ticket_id">
            <settings>
                <filter>textRange</filter>
                <label translate="true">ID</label>
                <sorting>desc</sorting>
            </settings>
        </column>
        <column name="title">
            <settings>
                <filter>text</filter>
                <label translate="true">Title</label>
            </settings>
        </column>

        <column name="website_id">
            <settings>
                <filter>text</filter>
                <label translate="true">Website Id</label>
            </settings>
        </column>

        <column name="is_open">
            <settings>
                <filter>text</filter>
                <label translate="true">Is Open</label>
            </settings>
        </column>
        <actionsColumn name="actions" class="Favicode\Tickets\Ui\Component\Listing\Column\TicketActions">
            <settings>
                <indexField>ticket_id</indexField>
            </settings>
        </actionsColumn>


    </columns>
</listing>
